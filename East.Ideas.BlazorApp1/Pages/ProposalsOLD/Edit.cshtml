@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Proposal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Proposal.Id" />
            <div class="form-group">
                <label asp-for="Proposal.Name" class="control-label"></label>
                <input asp-for="Proposal.Name" class="form-control" />
                <span asp-validation-for="Proposal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proposal.Details" class="control-label"></label>
                <input asp-for="Proposal.Details" class="form-control" />
                <span asp-validation-for="Proposal.Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proposal.OwnerId" class="control-label"></label>
                <input asp-for="Proposal.OwnerId" class="form-control" />
                <span asp-validation-for="Proposal.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proposal.Created" class="control-label"></label>
                <input asp-for="Proposal.Created" class="form-control" />
                <span asp-validation-for="Proposal.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
